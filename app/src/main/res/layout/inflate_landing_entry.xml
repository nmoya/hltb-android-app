<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:padding="15dp"
    >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_gameCover"
        android:layout_width="227dp"
        android:layout_height="320dp"
        android:scaleType="fitStart"
        android:src="@drawable/no_image"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Dark Souls"
            />

        <TextView
            android:id="@+id/txt_mainStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Main Story: 22 hours"
            />

        <TextView
            android:id="@+id/txt_mainExtras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Main+Extras: 42 hours"
            />

        <TextView
            android:id="@+id/txt_completionist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Completionist: 52 hours"
            />

        <TextView
            android:id="@+id/txt_combined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:textSize="14sp"
            tools:text="Combined: 32 hours"
            />


    </LinearLayout>
</LinearLayout>

